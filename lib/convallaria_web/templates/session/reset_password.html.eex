
<div class="card">
  <div class="card-header">修改密码</div>
  <div class="card-body">
    <%= form_for @changeset, session_path(@conn, :update_password), fn f -> %>
      <input type="hidden" value="<%= @token %>" name="user[reset_password_token]" id="user_reset_password_token">
      <div class="form-group">
        <%= password_input f, :password, class: "form-control", required: true, placeholder: "密码" %>
        <%= error_tag f, :password %>
      </div>
      <div class="form-group">
        <%= password_input f, :password_confirmation, class: "form-control", required: true, placeholder: "确认密码" %>
        <%= error_tag f, :password_confirmation %>
      </div>
      <div class="form-actions">
        <%= submit "修改密码", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>