<h2>Listing Devices</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Secret</th>
      <th>Active time</th>
      <th>Last online</th>
      <th>Ip</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for device <- @devices do %>
    <tr>
      <td><%= device.name %></td>
      <td><%= device.secret %></td>
      <td><%= device.active_time %></td>
      <td><%= device.last_online %></td>
      <td><%= device.ip %></td>

      <td class="text-right">
        <span><%= link "Show", to: admin_device_path(@conn, :show, device), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: admin_device_path(@conn, :edit, device), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: admin_device_path(@conn, :delete, device), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Device", to: admin_device_path(@conn, :new) %></span>
