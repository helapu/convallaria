<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :nickname, class: "control-label" %>
    <%= text_input f, :nickname, class: "form-control" %>
    <%= error_tag f, :nickname %>
  </div>

  <div class="form-group">
    <%= label f, :product_key, class: "control-label" %>
    <%= text_input f, :product_key, class: "form-control" %>
    <%= error_tag f, :product_key %>
  </div>

  <div class="form-group">
    <%= label f, :key, class: "control-label" %>
    <%= text_input f, :key, class: "form-control" %>
    <%= error_tag f, :key %>
  </div>

  <div class="form-group">
    <%= label f, :secret, class: "control-label" %>
    <%= text_input f, :secret, class: "form-control" %>
    <%= error_tag f, :secret %>
  </div>

  <div class="form-group">
    <%= label f, :iotid, class: "control-label" %>
    <%= text_input f, :iotid, class: "form-control" %>
    <%= error_tag f, :iotid %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
